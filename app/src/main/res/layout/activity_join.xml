<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">

    <RelativeLayout
        android:id="@+id/layout_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_email"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:maxLength="320"
            app:met_floatingLabel="highlight"
            app:met_autoValidate="true"/>

        <Button
            android:id="@+id/btn_check_email"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/edit_email"
            android:layout_toEndOf="@id/edit_email"
            android:text="인증" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_emailAuth"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:00"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edit_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:hint="인증번호"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp" />

        <Button
            android:id="@+id/btn_auth"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="완료" />
    </LinearLayout>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:maxLength="20"
        android:layout_marginTop="5dp"
        app:met_floatingLabel="highlight"
        app:met_autoValidate="true" />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_check_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        app:met_floatingLabel="highlight"
        android:maxLength="20"/>

    <RelativeLayout
        android:id="@+id/layout_nickname"
        android:layout_width="300dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_nickname"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="닉네임"
            android:inputType="text"
            android:maxLength="15"
            app:met_floatingLabel="highlight"
            app:met_autoValidate="true"/>

        <Button
            android:id="@+id/btn_check_nickname"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/edit_nickname"
            android:layout_toEndOf="@id/edit_nickname"
            android:text="중복확인" />
    </RelativeLayout>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="이름"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:layout_marginTop="5dp"
        app:met_floatingLabel="highlight"
        app:met_autoValidate="true"
        android:maxLength="20" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="가입" />

</LinearLayout>