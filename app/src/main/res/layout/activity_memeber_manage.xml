<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9"
    tools:context="kr.co.appcode.teamcloud.MemberManageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp">

            <TextView
                android:id="@+id/text_const_team_master"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팀 마스터" />

            <TextView
                android:id="@+id/text_master_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_const_team_master"
                android:layout_marginTop="5dp"
                android:text="마스터 이름"
                android:textSize="17sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#fff"
            android:padding="10dp">

            <TextView
                android:id="@+id/text_const_team_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팀 관리자" />

            <ListView
                android:id="@+id/list_admin"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/text_const_team_admin"
                android:layout_marginTop="5dp">

            </ListView>

            <TextView
                android:id="@+id/text_no_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_const_team_admin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="팀 관리자가 없습니다."
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#fff"
            android:padding="10dp">

            <TextView
                android:id="@+id/text_const_team_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일반 멤버" />

            <ListView
                android:id="@+id/list_member"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/text_const_team_member"
                android:layout_marginTop="5dp">

            </ListView>

            <TextView
                android:id="@+id/text_no_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_const_team_member"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="일반 멤버가 없습니다."
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>


